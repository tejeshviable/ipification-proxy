<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OAuthV2 continueOnError="false" enabled="true" name="OAuth-ipification">
    <DisplayName>OAuth-ipification</DisplayName>
    <Properties/>
    <Attributes/>
    <ExternalAuthorization>false</ExternalAuthorization>
    <Operation>VerifyAccessToken</Operation>
    <SupportedGrantTypes/>
    <GenerateResponse enabled="true"/>
    <Tokens/>
    <RFCCompliantRequestResponse>true</RFCCompliantRequestResponse>
    <VerifyJWT>
        <Algorithm>RS256</Algorithm>
        <!-- Algorithm used for signing the JWT, matching the generation policy -->
        <PublicKey>
            <!-- Reference to the public key corresponding to the private key used for signing -->
            <Value ref="public.rsa-publickey-1"/>
        </PublicKey>
        <IgnoreExpiry>false</IgnoreExpiry>
        <!-- Optional: Set to true to ignore token expiry -->
    </VerifyJWT>
</OAuthV2>